script.
	pageSetUp();

	var pagefunction = function() {
		$('.summernote').summernote({
			height: 200,
			toolbar: [
				['style', ['style']],
				['font', ['bold', 'italic', 'underline', 'clear']],
				['fontname', ['fontname']],
				['color', ['color']],
				['para', ['ul', 'ol', 'paragraph']],
				['height', ['height']],
				['table', ['table']],
				['insert', ['link', 'picture', 'hr']],
				['view', ['fullscreen', 'codeview', 'help']]
			]
		});

		$('#simpan').click(function (e){
			e.preventDefault();
			var desc = $("#page-content").summernote('code');
			//- $("#page-content").summernote('code');
			var selector = $(this);
			selector.attr('disabled', true);
			if (desc == "") {
				$.smallBox({
					title : "Peringatan",
					content : "<i class='fa fa-clock-o'></i> <i>data masih kosong</i>",
					color : "#C46A69",
					iconSmall : "fa fa-times fa-1x fadeInRight animated",
					timeout : 1000
				});
				selector.attr('disabled', false);
			} else {
				var data = {
					desc : desc
				}
				$.ajax({
					url : '/manage/about/proses',
					type : 'POST',
					dataType : 'json',
					data : data,
					success : function (msg) {
						if (msg.status == 200 ) {
							$.smallBox({
								content : "<i class='fa fa-clock-o'></i> <i> data berhasil di proses</i>",
								color : "#659265",
								iconSmall : "fa fa-check fa-1x fadeInRight animated",
								timeout : 1000
							});
						} else {
							$.smallBox({
								title : "Peringatan",
								content : "<i class='fa fa-clock-o'></i> <i>"+msg.pesan+"</i>",
								color : "#C46A69",
								iconSmall : "fa fa-times fa-1x fadeInRight animated",
								timeout : 1000
							});
						}
						selector.attr('disabled', false);
					}
				})
			}
		});
	};

	var pagedestroy = function(){
		
		// destroy summernote
		$(".summernote").summernote( 'destroy' );

		// debug msg
		if (debugState){
			root.console.log("âœ” Summernote and Markdown editors destroyed");
		}
	}

	loadScript("/js/plugin/summernote/summernote.min.js", pagefunction);