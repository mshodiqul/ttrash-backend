mixin modal(options)
	div.modal.fade#remoteModal
		div.modal-dialog
			div.modal-content
				if options.header
					div.modal-header
						if options.header.closeable
							button(type="button" data-dismiss="modal").close
								span &times;
						h4.modal-title= options.header.title
				div.modal-body