mixin toolbox(objects)
	div(style="background-color:#EFEFEF; padding: 10px" class="col-md-12")
		each object in objects
			a(href=object.url || 'javascript:void(0)', class="btn btn-default" id=object.id)
				i.fa(class=object.icon) 
				| &nbsp;
				span= object.title
			| &nbsp;

